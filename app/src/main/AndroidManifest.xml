<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ca.unb.mobiledev.pm_app">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PM_App">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".CreateAccount"/>
        <activity android:name=".AccountHomePage"/>
        <activity android:name=".CreateProject"/>
        <activity android:name=".ProjectsList"/>
        <activity android:name=".ProjectPage"/>
        <activity android:name=".MembersList"/>
        <activity android:name=".MemberPage"/>
        <activity android:name=".AddMember"/>
        <activity android:name=".TasksPage"/>
        <activity android:name=".CreateTask"/>
        <activity android:name=".TaskDetail"/>
        <activity android:name="ProjectSettings"/>
    </application>

</manifest>